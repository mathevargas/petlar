<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Arte ou título -->

        <!-- Foto do publicador -->
        <ImageView
            android:id="@+id/imgFotoPublicador"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/borda_foto_perfil"
            android:scaleType="centerCrop"
            android:contentDescription="Foto do Publicador" />

        <!-- Nome -->
        <TextView
            android:id="@+id/txtNomePublicador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Publicador"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Bio -->
        <TextView
            android:id="@+id/txtBioPublicador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biografia do publicador"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Botão para ver pets disponíveis -->
        <Button
            android:id="@+id/btnVerPetsDisponiveisPublicador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Pets Disponíveis"
            android:background="@drawable/botao_primario"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
