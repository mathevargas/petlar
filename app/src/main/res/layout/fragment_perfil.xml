<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Cabeçalho com arte -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Arte "Meu Perfil" ajustada mais abaixo -->
            <ImageView
                android:id="@+id/imgTituloMeuPerfil"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:adjustViewBounds="true"
                android:src="@drawable/titulo_meu_perfil"
                android:contentDescription="Arte Meu Perfil" />
        </RelativeLayout>

        <!-- Seção de Dados do Usuário -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Foto de perfil -->
            <ImageView
                android:id="@+id/imgFotoPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_perfil_default"
                android:layout_marginBottom="8dp"
                android:background="@drawable/borda_foto_perfil"
                android:scaleType="centerCrop"
                android:contentDescription="Foto do Usuário" />

            <!-- Nome -->
            <TextView
                android:id="@+id/txtNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Usuário"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!-- Bio -->
            <TextView
                android:id="@+id/txtBioUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apaixonado por animais e adoção responsável."
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Botão: Editar Perfil -->
            <Button
                android:id="@+id/btnEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_secundario"
                android:textColor="@android:color/white" />

            <!-- Botão: Ver Meus Pets -->
            <Button
                android:id="@+id/btnVerMeusPets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Meus Pets"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_primario"
                android:textColor="@android:color/white" />

            <!-- Botão: Alterar Tema -->
            <Button
                android:id="@+id/btnTema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alterar Tema"
                android:layout_marginBottom="8dp" />

            <!-- Layout: Botões de Tema (inicialmente escondido) -->
            <LinearLayout
                android:id="@+id/layoutTemas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnTemaClaro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modo Claro" />

                <Button
                    android:id="@+id/btnTemaEscuro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modo Escuro" />

                <Button
                    android:id="@+id/btnTemaSistema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Igual ao Sistema" />
            </LinearLayout>

            <!-- Botão: Sair da Conta -->
            <Button
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sair da Conta"
                android:background="@drawable/botao_outline"
                android:textColor="@color/petlar_green" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
