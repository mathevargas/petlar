<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/petlar_yellow"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Imagem do pet -->
        <ImageView
            android:id="@+id/imgPet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagem do Pet" />

        <!-- Coluna com os dados e botões -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Nome -->
            <TextView
                android:id="@+id/txtNomePet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_primary" />

            <!-- Idade -->
            <TextView
                android:id="@+id/txtIdadePet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idade"
                android:textColor="@color/text_primary" />

            <!-- Tipo -->
            <TextView
                android:id="@+id/txtTipoPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textColor="@color/text_primary" />

            <!-- Porte -->
            <TextView
                android:id="@+id/txtPortePet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Porte"
                android:textColor="@color/text_primary" />

            <!-- Cidade - Estado -->
            <TextView
                android:id="@+id/txtCidadeEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade - Estado"
                android:textColor="@color/text_primary" />

            <!-- Botões visíveis apenas para o dono do pet -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="end">

                <!-- Marcar como adotado -->
                <Button
                    android:id="@+id/btnMarcarAdotado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adotado"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/petlar_green"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <!-- Editar pet -->
                <Button
                    android:id="@+id/btnEditarPet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/petlar_blue"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <!-- Excluir pet -->
                <Button
                    android:id="@+id/btnExcluirPet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Excluir"
                    android:backgroundTint="@color/orange_500"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
